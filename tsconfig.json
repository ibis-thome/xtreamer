{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "types": [
            "node"
        ],
        "noImplicitAny": false,
        "outDir": "dist",
        "rootDir": "./src",
        "sourceMap": true,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node"
    },
    "exclude": [
        "node_modules"
    ]
}